{
  "name": "react-starter",
  "version": "1.0.0",
  "description": "React Starter Project",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && webpack --config config/webpack/webpack.prod.js",
    "clean": "rm -rf dist",
    "lint": "eslint --fix src e2e/specs e2e/pageobjects server",
    "start": "NODE_ENV=production node server",
    "start:dev": "webpack-dev-server --config config/webpack/webpack.dev.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "npm run test -- -u"
  },
  "author": "Vicent Gozalbes <vigosan@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.5",
    "eslint": "^4.5.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.3.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^20.0.4",
    "prettier": "^1.6.0",
    "react-test-renderer": "^15.6.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1",
    "webpack-hot-middleware": "^2.18.2"
  },
  "dependencies": {
    "consign": "^0.1.6",
    "express": "^4.15.4",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false
        }
      ]
    }
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testPathIgnorePatterns": [
      "/e2e/"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/config/jest/styleMock.js",
      "\\.(jpe?g|png|gif|svg)$": "<rootDir>/config/jest/fileMock.js"
    }
  }
}
