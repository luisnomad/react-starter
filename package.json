{
  "name": "react-starter",
  "version": "1.0.0",
  "description": "React Starter Project",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && webpack --config config/webpack/webpack.prod.js",
    "clean": "rm -rf dist",
    "lint": "eslint --fix src e2e/specs e2e/pageobjects server",
    "start": "NODE_ENV=production node server",
    "start:dev": "webpack-dev-server --config config/webpack/webpack.dev.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "npm run test -- -u"
  },
  "author": "Vicent Gozalbes <vigosan@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "prettier": "^1.7.2",
    "react-test-renderer": "^16.0.0",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.19.1"
  },
  "dependencies": {
    "consign": "^0.1.6",
    "express": "^4.16.3",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "babel": {
    "presets": [
      "env",
      "stage-2",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false
        }
      ]
    }
  },
  "jest": {
    "cacheDirectory": "/tmp",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testPathIgnorePatterns": [
      "/e2e/"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/config/jest/styleMock.js",
      "\\.(jpe?g|png|gif|svg)$": "<rootDir>/config/jest/fileMock.js"
    }
  }
}
